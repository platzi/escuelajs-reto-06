body
  background-color white
  margin 0
  padding 0

section
  margin 0
  paddin 0

.btn 
	background-color #f7f7f7
	border 0 solid
	padding 1em 1.5em
	font-size 1em
	font-weight bold
	border-radius .1em
	position absolute
	box-shadow 0 .25em .5em rgba(0,0,0,.25)
	z-index 100
	top 4em
	left .7em

.btn:focus
  border: 0
  outline: none
body
  background-color white
  margin 0
  padding 0

section
  margin 0
  padding 0

.App
  align-items center
  display flex
  flex-flow column nowrap
  justify-content center

.App > h1
  font-family 'san francisco', Helvetica, Roboto, Arial
  font-size 1.8em
  font-weight bold
  line-height 1.2em

.App__button
  background-color orange
  border 0 none transparent
  font-size 1.2em
  height 50px
  line-height 1.2em
  margin 100px 0
  width auto

.App > div
  height calc(100% - 50px)
  width 100%

.App > p
  font-family 'san francisco', Helvetica, Roboto, Arial
  font-size 1.2em
  font-weight bold
  line-height 1.2em

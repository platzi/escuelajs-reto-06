fontSize = 16px

*, *::after, *::before
  margin 0
  padding 0
  box-sizing border-box

body
  background-color white
  font-size fontSize

#app
  height 100vh
  width 100vw
  display flex
  justify-content center
  align-items center

.App 
  position relative
  height 92vh
  width 92vw
  border 4px solid black
  border-radius 1em
  overflow hidden
  
.btn-showMap
  background-color white
  color black
  font-size 1.2em
  font-weight bold
  padding 0.4em
  margin 0 9.6px
  position fixed
  top 160px
  z-index 2
